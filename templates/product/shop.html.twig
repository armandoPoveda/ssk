{% extends 'layout.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	<div data-spy="scroll" style="margin-top:5%;" data-target="#navbar-example2" data-offset="0">
		<div class="container" style="margin-top:1%; margin-bottom:1%;">
			<h5 class="card-title">{% trans %}Products{% endtrans %}</h5>
			<ul class="nav nav-tabs bg-primary rounded">
				{% set type = app.request.attributes.get("type") %}
				{% for productType in productTypes %}
					<li class="">
						<a style="margin: 5px !important;" class="white" href="{{ path('shop',{ type : productType.getId()}) }}">{{productType.getName() | upper}}</a>
					</li>
				{% endfor %}
			</ul>
			<div class="tab-content" style="margin-left: 2%;margin-top:1%; margin-bottom:1%;">
				<div class="row">
					{% for product in products %}
						<div class="col-sm" style="margin:10px;">
							<div class="card" id="color-app" style="width: 18rem;">
								<img style="height: 250px !important;" src="{{ asset('images/products/' ~ product.getImage()) }}" class="card-img-top divClass" alt="">
								<div class="card-body">
									<h5 class="card-title">{{product.getName()}}</h5>
									<p class="card-text">{{ product.getDescription()}}</p>
									<a href="#" class="btn btn-primary">{% trans %}ButtonInfo{% endtrans %}</a>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
