{% extends 'layout.html.twig' %}

{% block title %}Product
{% endblock %}

{% block content %}
	<div class="container" style="margin-top:1%; margin-bottom:1%;padding:10px;">

		<h1>Product</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ product.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ product.name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ product.description }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>{{ product.image }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ product.price }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('product_index') }}">back to list</a><br>

		<a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

		{{ include('product/_delete_form.html.twig') }}
	</div>
{% endblock %}
