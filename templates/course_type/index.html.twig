{% extends 'layout.html.twig' %}

{% block title %}CourseType index
{% endblock %}

{% block content %}
	<div class="container" style="margin-top:1%; margin-bottom:1%;padding:10px;">
		<h1>CourseType index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for course_type in course_types %}
					<tr>
						<td>{{ course_type.id }}</td>
						<td>{{ course_type.name }}</td>
						<td>
							<a href="{{ path('course_type_show', {'id': course_type.id}) }}">show</a>
							<a href="{{ path('course_type_edit', {'id': course_type.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a href="{{ path('admin') }}">back to admin</a><br>
		<a href="{{ path('course_type_new') }}">Create new</a>
	</div>
{% endblock %}
