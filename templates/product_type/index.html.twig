{% extends 'layout.html.twig' %}

{% block title %}ProductType index
{% endblock %}

{% block content %}
	<div class="container" style="margin-top:1%; margin-bottom:1%;padding:10px;">

		<h1>ProductType index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for product_type in product_types %}
					<tr>
						<td>{{ product_type.id }}</td>
						<td>{{ product_type.name }}</td>
						<td>
							<a href="{{ path('product_type_show', {'id': product_type.id}) }}">show</a>
							<a href="{{ path('product_type_edit', {'id': product_type.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a href="{{ path('admin') }}">back to admin</a><br>
		<a href="{{ path('product_type_new') }}">Create new</a>
	</div>
{% endblock %}
