{% extends 'layout.html.twig' %}

{% block title %}Course{% endblock %}

{% block content %}
<div class="container" style="margin-top:1%; margin-bottom:1%;padding:10px;">
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Step_one</th>
                <td>{{ course.stepOne }}</td>
            </tr>
            <tr>
                <th>Step_two</th>
                <td>{{ course.stepTwo }}</td>
            </tr>
            <tr>
                <th>Step_three</th>
                <td>{{ course.stepThree }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('course_index') }}">back to list</a><br>

    <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>

    {{ include('course/_delete_form.html.twig') }}
</div>
{% endblock %}
