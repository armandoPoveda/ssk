{% extends 'layout.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	<div class="container" style="margin-top:1%; margin-bottom:1%;padding:60px">
		<h5 class="card-title">{% trans %}Faq{% endtrans %}</h5>
	<div class="container" id="color-app" style="">
		{% for item in faq %}
			<div class="dropdown" style="margin: 10px;">
				<button style="font-size: 1em; background:transparent;border-color:transparent;" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					{{item.getQuestion}}
				</button>
				<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
					<ul class="list-group">
						<li class="list-group-item">{{item.getAnswer}}</li>
					</ul>
				</div>
			</div>
		{% endfor %}
	</div>
	</div>
{% endblock %}
